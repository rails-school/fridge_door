<p id="notice"><%= notice %></p>

<h1>Weather</h1>

<table>
  <thead>
    <tr>
      <th>Temperature</th>
      <th>Location</th>
      <th>Description</th>
      <th>Icon url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weather.each do |weather| %>
      <tr>
        <td><%= weather.temperature %></td>
        <td><%= weather.location %></td>
        <td><%= weather.description %></td>
        <td><%= weather.icon_url %></td>
        <td><%= link_to 'Show', weather %></td>
        <td><%= link_to 'Edit', edit_weather_path(weather) %></td>
        <td><%= link_to 'Destroy', weather, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Weather', new_weather_path %>
